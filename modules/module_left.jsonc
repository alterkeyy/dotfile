{
    "hyprland/workspaces": {
        "disable-scroll": true,
        "on-scroll-up": "hyprctl dispatch workspace e-1",
     "on-scroll-down": "hyprctl dispatch workspace e+1",
        "all-outputs": true,
        "warp-on-scroll": true,
        "format": "{name}",
        "format-icons": {
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "hyprland/window": {
        "format": "üëâ {class}",
        "rewrite": {
            "(.*) ‚Äî Microsoft-edge": "üåé $1",
            "(.*) - fish": "> [$1]",
            "(.*) - kitty": "ÔÑ† [$1]"
        },
        "separate-outputs": true
    },
    "group/cpu_temp": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": true
        },
        "modules": [
            "cpu",
            "temperature"
        ]
    },
    // CPU
    "cpu": {
        "format": "Ôãõ  {usage}% ",
        "interval": 5
        // "tooltip-format":"{avg_frequency}"//this is uesless
        // "on-click": "~/.config/ml4w/settings/system-monitor.sh"
    },
    //temp
    "temperature": {
        "thermal-zone": 1,
        "format": "{temperatureC}¬∞C Ôãâ",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C Ôãá"
    },
    //gpu
    "custom/nvidia": {
        "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\)/ \\1%/g'",
        "format": "G :{}",
        "interval": 2
    },
    // Memory
    "memory": {
        "interval": 5,
        "format": "Ôî∏ {}% "
        // "on-click": "~/.config/ml4w/settings/system-monitor.sh"
    },
    // Harddisc space used
    "disk": {
        "interval": 10,
        "format": "ÔÉá  {percentage_used}% ",
        "path": "/"
        // "on-click": "~/.config/mddl4w/settings/system-monitor.sh"
    },
    "group/speed": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": true
        },
        "modules": [
            "network#speeddown",
            "network#speedup"
        ]
    },
    "network#speeddown": {
        // "interface": "wlp2s0",//auto detect
        "interval": 2,
        "format": "{{ÔÄô  {bandwidthDownBytes}}", //This format is used when other formats aren't specified.
        "format-wifi": "ÔÄô  {bandwidthDownBytes}",
        "format-ethernet": "{ÔÄô  {bandwidthDownBytes}",
        "format-disconnected": "", //An empty format will hide the module.
        "tooltip": false,
        // "tooltip-format": "",
        // "tooltip-format-wifi": "down:{bandwidthDownBytes}\nup:{bandwidthUpBytes}\ntotal:{bandwidthTotalBytes}",
        // "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        // "tooltip-format-disconnected": "Disconnected",
        "max-length": 60
    },
    "network#speedup": {
        // "interface": "wlp2s0",//auto detect
        "interval": 2,
        "format": "{{ÔÇì  {bandwidthUpBytes}}", //This format is used when other formats aren't specified.
        "format-wifi": "ÔÇì  {bandwidthUpBytes}",
        "format-ethernet": "{ÔÇì  {bandwidthUpBytes}",
        "format-disconnected": "", //An empty format will hide the module.
        "tooltip": false,
        // "tooltip-format": "",
        // "tooltip-format-wifi": "down:{bandwidthDownBytes}\nup:{bandwidthUpBytes}\ntotal:{bandwidthTotalBytes}",
        // "tooltip-format-ethernet": "{ifname} ÔÉÅ",
        // "tooltip-format-disconnected": "Disconnected",
        "max-length": 60
    },
}