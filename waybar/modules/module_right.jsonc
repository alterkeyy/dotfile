        "tooltip-format-ethernet": "ifname:{ifname} ÔÉÅ\n\nipaddr:{ipaddr}\n\n netmask:{netmask}\n\ngateway:{gwaddr}\ncidr:{cidr}\n",
        "tooltip-format-disconnected": "Disconnected",
